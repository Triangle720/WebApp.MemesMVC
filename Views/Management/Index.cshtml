@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@{
    ViewData["Title"] = "Management";
}

<h1>Management</h1>
<div class="form-group btn btn-primary">
    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">check new pictures</a>
</div>
<div class="form-group btn btn-primary">
    <a class="nav-link text-dark" asp-area="" asp-route-roleType="@RoleTypes.USER" asp-route-pageIndex="1"
       asp-controller="Management" asp-action="UsersManager">Manage users</a>
</div>
@if (httpContextAccessor.HttpContext.Session.GetString("ROLE") == Enum.GetName(typeof(RoleTypes), RoleTypes.ADMIN))
{
    <div class="form-group btn btn-primary">
        <a class="nav-link text-dark" asp-area="" asp-route-roleType="@RoleTypes.MODERATOR" asp-route-pageIndex="1"
           asp-controller="Management" asp-action="UsersManager">Manage moderators</a>
    </div>
}