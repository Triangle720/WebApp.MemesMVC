@model WebApp.MemesMVC.Models.UserModel

@{
    ViewData["Title"] = "Role manager";
}

<h4>Change role</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>ID:   @Model.Id</p>
                <input type="hidden" asp-for=@Model.Id class="form-control" />
            </div>
            <div class="form-group">
                <p>Nick: @Model.Nickname</p>
            </div>
            <div class="form-group">
                <p>Account created in: @Model.AccountCreationTime</p>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="User"> @RoleTypes.USER </option>
                    <option value="Moderator"> @RoleTypes.MODERATOR </option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn btn-primary" asp-route-pageIndex=@ViewBag.PageIndex/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-roleType=@Model.Role asp-route-pageIndex=@ViewBag.PageIndex asp-action="Index">Back</a>
</div>

