@model WebApp.MemesMVC.Models.UserModel

@{
    ViewData["Title"] = "Ban";
}

<h1>@ViewBag.Action</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action=@ViewBag.Action>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>ID:   @Model.Id</p>
                <input type="hidden" asp-for="@Model.Id" class="form-control" />
            </div>
            <div class="form-group">
                <p>Nick: @Model.Nickname</p>
            </div>
            <div class="form-group">
                <p>Account created in: @Model.AccountCreationTime</p>
            </div>
            <div class="form-group">
                <p>Role:@Model.Role</p>
            </div>
            @if (!Model.IsBanned)
            {
                <div class="form-group">
                    <label asp-for="BanReason" class="control-label"></label>
                    <input type="text" asp-for="BanReason" class="form-control" />
                    <span asp-validation-for="BanReason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BanExpireIn" class="control-label"></label>
                    <input asp-for="BanExpireIn" class="form-control" />
                    <span asp-validation-for="BanExpireIn" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <p>Reason: @Model.BanReason</p>
                </div>
                <div class="form-group">
                    <p>Expire in: @Model.BanExpireIn</p>
                </div>
            }
            <div class="form-group">
                <input value="@ViewBag.Action" class="btn btn-primary" type="submit" asp-route-pageIndex=@ViewBag.PageIndex asp-action=@ViewBag.Action />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-roleType=@ViewBag.RoleType asp-route-pageIndex=@ViewBag.PageIndex asp-action="Index">Back</a>
</div>

