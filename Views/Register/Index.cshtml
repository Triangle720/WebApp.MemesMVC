@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@model WebApp.MemesMVC.Models.UserModel

@{
    ViewData["Title"] = "Register";
}

@if (httpContextAccessor.HttpContext.Session.GetString("TOKEN") == null)
{
    <div class="text-center">
        <h1>Register</h1>
        <hr />
        <div class="row justify-content-center">
            <form asp-action="Register">
                <div class="form-part col-auto">
                    <label asp-for="Login" class="control-label"></label>
                    <input placeholder="4-20 characters" asp-for="Login" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-part col-auto">
                    <label asp-for="Nickname" class="control-label"></label>
                    <input placeholder="4-20 characters" asp-for="Nickname" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Nickname" class="text-danger"></span>
                </div>
                <div class="form-part col-auto">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" placeholder="6+ characters" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-part col-auto">
                    <label asp-for="Email" class="control-label"></label>
                    <input placeholder="example@xmpl.net" asp-for="Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-btn col-auto">
                    <input type="submit" value="Create account" class="btn" />
                    <p class="text-danger"> @ViewBag.ErrorMessage </p>
                </div>
            </form>
        </div>
    </div>
}
