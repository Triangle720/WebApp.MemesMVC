@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@model WebApp.MemesMVC.Models.UserModel

@{
    ViewData["Title"] = "Login";
}

@if (httpContextAccessor.HttpContext.Session.GetString("TOKEN") == null)
{<div class="form-container">
     <h1>  Sign in  </h1>
    <hr />
            <form asp-action="Login" class="form-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input placeholder="Enter your login" asp-for="Login" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input type="password" placeholder="Enter your password" asp-for="Password" class="form-control" />
                    <p class="text-danger"> @ViewBag.Error </p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sign in" class="btn btn-primary" />
                </div>
            </form>
</div>
}


