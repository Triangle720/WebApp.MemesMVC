@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@model WebApp.MemesMVC.Models.UserModel

@{
    ViewData["Title"] = "Login";
}

@if (httpContextAccessor.HttpContext.Session.GetString("TOKEN") == null)
{<div class="form-container">
        <h1>Sign in</h1>
        <hr/>
        <form asp-action="Login" class="form-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" autocomplete="off"/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Sign in" class="btn" />
                <p class="text-danger" style="text-wrap:initial"> @ViewBag.Error </p>
            </div>
        </form>
    </div>
}


