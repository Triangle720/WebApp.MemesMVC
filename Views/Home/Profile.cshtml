@model WebApp.MemesMVC.Models.UserModel

@{
    ViewData["Title"] = "Profile";
    string newPassword = "";
    string password = "";
}

<h1>Profile</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nickname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nickname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            <input id="passwordFormButton" type="button" value="Change" class="btn btn-primary" onclick="showForm('changePassword','passwordFormButton')" />
            <div id="changePassword" style="display:none">
                <form asp-action="ProfilePasswordChange" asp-route-userId="@Model.Id"
                      asp-route-newPassword="@newPassword" asp-route-password="@password">
                    <div class="form-group">
                        <input asp-for="@password" type="password" placeholder="Enter password" class="form-control" pattern=".{6,256}" required title="6+ characters required"/>
                    </div>
                    <div class="form-group">
                        <input asp-for="@newPassword" type="password" placeholder="Enter new password" class="form-control" pattern=".{6,256}" required title="6+ characters required"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="OK" class="btn btn-primary" />
                        <input type="button" value="Hide" class="btn btn-primary" onclick="hideForm('changePassword','passwordFormButton')" />
                    </div>
                </form>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountCreationTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountCreationTime)
        </dd>
    </dl>
</div>
