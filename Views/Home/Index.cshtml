@model IEnumerable<WebApp.MemesMVC.Models.PictureModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-md-center">
    <div class="col-md-10 text-center">
        <h1>Main page</h1>
        <hr />
        @foreach (var item in Model)
        {
            <h2>@item.Title</h2>
            <h6>Author: </h6>
            <div class="image-container">
                <img src="@item.UrlAddress" />
            </div>
            <hr />
        }
        <div class="row d-flex justify-content-center">
            @if ((int)ViewBag.PageIndex > 1)
            {
                <div class="col-auto nav-button">
                    <a class="btn" asp-route-pageIndex=@(ViewBag.PageIndex - 1)
                       asp-controller="Home" asp-action="Index"> Prev </a>
                </div>
            }
            @if (Model.Count() == 10)
            {
                <div class="col-auto nav-button">
                    <a type="button" class="btn" asp-route-pageIndex=@(ViewBag.PageIndex + 1)
                       asp-controller="Home" asp-action="Index"> Next </a>
                </div>
            }
        </div>
    </div>
</div>
</div>
